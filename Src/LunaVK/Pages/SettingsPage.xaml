<Page
    x:Class="LunaVK.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LunaVK.Pages"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="16">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="App language" FontSize="16" FontWeight="SemiBold"/>
            <ComboBox x:Name="LanguageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged" Width="260">
                <ComboBoxItem Tag="en-US">English (US)</ComboBoxItem>
                <ComboBoxItem Tag="ru-RU">Русский</ComboBoxItem>
                <ComboBoxItem Tag="zh-CN">中文</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Select language and restart the app to apply resources." TextWrapping="Wrap" FontSize="12" Opacity="0.8"/>
        </StackPanel>
    </Grid>
</Page>