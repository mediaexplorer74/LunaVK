                        </Border.OpacityMask>
                    </Border>
                </Grid>-->
                <AppBarButton Height="48" Width="48" Visibility="{Binding HaveLyricsVisibility}" Tapped="SongText_Tap" HorizontalAlignment="Center">
                    <local:IconUC Glyph="&#xE90B;"/>
                </AppBarButton>


                <!--<Grid Height="60" Width="60" Grid.Column="1" Tap="Broadcast_Tap">
