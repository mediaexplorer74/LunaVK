<UserControl
    x:Class="LunaVK.UC.Attachment.AttachGiftUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:UC="using:LunaVK.UC"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel>
        <Border Width="200" Height="200" CornerRadius="10">
            <Border.Background>
                <ImageBrush ImageSource="{Binding thumb_256}"/>
            </Border.Background>
        </Border>
        <!--<Image Source="{Binding thumb_256}" Width="200" Height="200"/>-->
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 10 0 0">
            <UC:IconUC Glyph="&#xED54;" FontSize="16" Foreground="{ThemeResource TextBrushMediumHigh}" Margin="0 0 10 0"/>
            <TextBlock Text="Подарок" FontSize="16" Foreground="{ThemeResource TextBrushMediumHigh}" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
