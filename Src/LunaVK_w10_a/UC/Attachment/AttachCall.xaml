<UserControl
    x:Class="LunaVK.UC.Attachment.AttachCall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LunaVK.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Width="40" Height="40"
                BorderThickness="2" BorderBrush="{StaticResource PhoneAccentColorBrush}"
                CornerRadius="20"
                >
            <local:IconUC Glyph="&#xE717;" FontWeight="ExtraBold" FontSize="16"
                          Foreground="{StaticResource PhoneAccentColorBrush}"/>
        </Border>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10 0">

            <TextBlock Name="_tipe" Text="Incomming call" FontWeight="Medium"/>
            <TextBlock Name="_duration" Text="10:00" Foreground="{ThemeResource TextBrushMedium}"/>
        </StackPanel>
    </Grid>
</UserControl>
