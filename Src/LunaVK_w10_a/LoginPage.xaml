    <Grid>





        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Normal">
                    <Storyboard>
                        <DoubleAnimation Duration="0:0:0.1" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="browser" d:IsOptimized="True"/>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="browser">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="Visible"/>
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.317" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimation Duration="0:0:0.3" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="progressRing" d:IsOptimized="True"/>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="progressRing">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="Visible"/>
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.317" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>



                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="_stackPanelLeft">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="_stackPanelLeft">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>


                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="_stackPanelCenter">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="_stackPanelCenter">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Auth">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="browser">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="browser">
                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                        
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="progressRing">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="progressRing">
                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                        </DoubleAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="_stackPanelCenter">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="_stackPanelLeft">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Loading">
                    <Storyboard>
                        <DoubleAnimation Duration="0:0:0.3" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="browser" d:IsOptimized="True"/>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="browser">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="Visible"/>
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.317" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="progressRing">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="progressRing">
                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>




                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="_stackPanelLeft">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.317" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimation Duration="0:0:0.3" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="_stackPanelLeft" d:IsOptimized="True"/>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="_stackPanelCenter">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.317" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimation Duration="0:0:0.2" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="_stackPanelCenter" d:IsOptimized="True"/>

                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>














        <Grid Background="Black">
            <Grid Name="RootBack" Opacity="0" Background="{ThemeResource SystemAccentColor}"/>
            <StackPanel Name="_stackPanelCenter" VerticalAlignment="Center" MaxWidth="250" Visibility="{Binding ElementName=_cbProxy, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
                <StackPanel.RenderTransform>
                    <TranslateTransform x:Name="tr"/>
                </StackPanel.RenderTransform>

                <Image x:Name="HeaderImage" Source="/Assets/Img/SplashScreen.png" framework:MetroInMotion.IsTiltEnabled="True"/>

                <Grid Margin="0 10" Name="gridLogin" Opacity="0">
                    <Grid.RenderTransform>
                        <TranslateTransform Y="100" x:Name="Transform1"/>
                    </Grid.RenderTransform>
                    <uc:IconUC Glyph="&#xE77B;" HorizontalAlignment="Left" FontSize="16" Foreground="White"/>
                    <TextBox Name="textBoxUsername" PlaceholderText="User name" x:Uid="UserName"
                     Background="Transparent" BorderThickness="0 0 0 1"
                     Padding="20 5 0 0" FontSize="16" Foreground="White" InputScope="EmailNameOrAddress"
                         TextChanged="textBoxUsername_TextChanged" KeyUp="textBoxUsername_KeyUp"
                         IsSpellCheckEnabled="False">
                        <TextBox.Resources>
                            <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="White" />
                            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="White" />
                        </TextBox.Resources>
                    </TextBox>
                </Grid>

                <Grid Name="gridPass" Opacity="0">
                    <Grid.RenderTransform>
                        <TranslateTransform Y="100" x:Name="Transform2"/>
                    </Grid.RenderTransform>
                    <uc:IconUC Glyph="&#xE72E;" HorizontalAlignment="Left" FontSize="16" Foreground="White"/>
                    <PasswordBox x:Name="passwordBox" PlaceholderText="Password" x:Uid="Password" Background="Transparent" BorderThickness="0 0 0 1"
                         Padding="20 5 0 0" PasswordChanged="passwordBox_PasswordChanged" KeyUp="passwordBox_KeyUp" Foreground="White">
                        <PasswordBox.Resources>
                            <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="White" />
                            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="White" />
                        </PasswordBox.Resources>
                    </PasswordBox>
                </Grid>

                <Grid>
                    <Button Content="LogIn" x:Uid="LogIn" HorizontalAlignment="Right" Click="Login_Click" Margin="0 10"
                     Name="LoginBtn" IsEnabled="False"/>
                    <ProgressRing Foreground="White" Name="_progressRing"/>
                </Grid>

                <TextBlock Name="_error" MaxLines="2" TextWrapping="Wrap" Opacity="0" Foreground="Red"/>
            </StackPanel>

            <Grid VerticalAlignment="Bottom" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Uid="SignUp" Text="SignUp" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Tapped="TextBlock_Tapped_1"/>
                <TextBlock Grid.Column="1" x:Uid="TermsOfUse" Text="TermsOfUse" HorizontalAlignment="Center" VerticalAlignment="Center" Tapped="TextBlock_Tapped" Foreground="White"/>
            </Grid>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 30" Name="_stackPanelLeft">
                <Button Content="OAuth login" Click="OAuthButton_Click" Foreground="White"/>
                <CheckBox Content="Use proxy" Margin="0 5" Foreground="White" Name="_cbProxy"/>

                <StackPanel Visibility="{Binding ElementName=_cbProxy, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"
                        HorizontalAlignment="Left" MaxWidth="200">
                    <TextBlock Text="Прокси от:" TextWrapping="Wrap" Foreground="White" FontSize="14"/>
                    <Image Source="/Assets/xtrafrancyz.png" />
                </StackPanel>
            </StackPanel>

            <ProgressRing x:Name="progressRing" HorizontalAlignment="Center" VerticalAlignment="Center" IsActive="True" Style="{StaticResource ThreeBounceProgressRingStyle}" Foreground="White" Width="200" Height="100" Opacity="0" Visibility="Collapsed"/>

            <WebView x:Name="browser" Visibility="Collapsed" Opacity="0" NavigationStarting="_browser_NavigationStarting" NavigationFailed="browser_NavigationFailed" NavigationCompleted="browser_NavigationCompleted"/>
        </Grid>

















