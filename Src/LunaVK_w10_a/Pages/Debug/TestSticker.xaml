                                                <Setter Target="Title.Foreground" Value="{ThemeResource SystemControlHighlightAltChromeWhiteBrush}" />
                                                <Setter Target="TrackNumber.Foreground" Value="{ThemeResource SystemControlHighlightAltChromeWhiteBrush}" />
                                                <Setter Target="TrackStatus.Foreground" Value="{ThemeResource SystemControlHighlightAltChromeWhiteBrush}" />
                                                <Setter Target="TrackContextTeachingMomentIcon.Foreground" Value="{ThemeResource SystemControlHighlightAltChromeWhiteBrush}" />
                                                <Setter Target="TrackContextTeachingMomentText.Foreground" Value="{ThemeResource SystemControlHighlightAltChromeWhiteBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup.States>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="ContextMenuTeachingMomentVisibilityStates">
                                    <VisualStateGroup.States>
                                        <VisualState x:Name="HideContextMenuTeachingMoment" />
                                        <VisualState x:Name="ShowContextMenuTeachingMoment">
                                            <VisualState.Setters>
                                                <Setter Target="TrackContextTeachingMomentIcon.Visibility" Value="Visible" />
                                                <Setter Target="TrackContextTeachingMomentText.Visibility" Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup.States>
                                </VisualStateGroup>
                                <VisualStateGroup>
                                    <VisualStateGroup.States>
                                        <VisualState x:Name="InlineCommandsInvisible" />
                                        <VisualState x:Name="InvokedInlineCommandsVisible">
                                            <VisualState.Storyboard>
                                                <Storyboard>
                                                    <Storyboard.Children>
                                                        <ObjectAnimationUsingKeyFrames Duration="0:0:0.3" Storyboard.TargetName="CommandList" Storyboard.TargetProperty="Visibility">
                                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard.Children>
                                                </Storyboard>
                                            </VisualState.Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="HoverInlineCommandsVisible">
                                            <VisualState.Storyboard>
                                                <Storyboard>
                                                    <Storyboard.Children>
                                                        <ObjectAnimationUsingKeyFrames Duration="0:0:0.1" Storyboard.TargetName="CommandList" Storyboard.TargetProperty="Visibility">
                                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Duration="0:0:0.1" Storyboard.TargetName="SelectionButton" Storyboard.TargetProperty="Visibility">
                                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Duration="0:0:0.1" Storyboard.TargetName="TrackNumber" Storyboard.TargetProperty="Visibility">
                                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard.Children>
                                                </Storyboard>
                                            </VisualState.Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="HoverInlineCommandsNoSelectionVisible">
                                            <VisualState.Storyboard>
                                                <Storyboard>
                                                    <Storyboard.Children>
                                                        <ObjectAnimationUsingKeyFrames Duration="0:0:0.1" Storyboard.TargetName="CommandList" Storyboard.TargetProperty="Visibility">
                                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard.Children>
                                                </Storyboard>
                                            </VisualState.Storyboard>
                                        </VisualState>
                                    </VisualStateGroup.States>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="DetailInfoVisualStateGroup">
                                    <VisualStateGroup.States>
                                        <VisualState x:Name="ShowDownloadProgress">
                                            <VisualState.Setters>
                                                <Setter Target="Duration.Visibility" Value="Collapsed" />
                                                <Setter Target="ItemOwnership.Visibility" Value="Collapsed" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="ShowItemOwnership">
                                            <VisualState.Setters>
                                                <Setter Target="Duration.Visibility" Value="Collapsed" />
                                                <Setter Target="ItemOwnership.Visibility" Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="ShowDefault">
                                            <VisualState.Setters>
                                                <Setter Target="Duration.Visibility" Value="Visible" />
                                                <Setter Target="ItemOwnership.Visibility" Value="Collapsed" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup.States>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.Children>
                                <Grid x:Name="TrackNumberColumn" Width="26" MinHeight="48" Background="#00FFFFFF">
                                    <Grid.Children>
                                        <Button x:Name="SelectionButton" Style="{StaticResource StandardTextButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Collapsed">
                                            
                                            <Button.Content>
                                                <Border x:Name="SelectionButtonBorder" Width="20" Height="20" BorderThickness="1" />
                                            </Button.Content>
                                        </Button>
                                        <TextBlock x:Name="TrackNumber"
                                            Style="{StaticResource NowPlayingBiDiBodyTextBlockStyle}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            
                                            IsHitTestVisible="False"
                                            TextWrapping="NoWrap"
                                            Visibility="Collapsed" />
                                    </Grid.Children>
                                </Grid>
                                <StackPanel x:Name="TrackListItem" Grid.Column="1" MinHeight="48" Background="#00FFFFFF" Orientation="Horizontal">
                                    <StackPanel.Children>
                                        <Grid Margin="0,0,12,0" HorizontalAlignment="Left" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.Children>
                                                <StackPanel Grid.Column="0" Margin="0" VerticalAlignment="Center" Orientation="Horizontal">
                                                    <StackPanel.Children>
                                                       
                                                        <!--<musicControls:TrackStatusIcon x:Name="TrackStatus" Margin="6,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}" />-->

                                                        <FontIcon Glyph="&#xEA55;" RenderTransformOrigin="0.5,0.5" FontWeight="Black" FontSize="14"
                                                                   x:Name="TrackStatus" Margin="6,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}">
                                                            <FontIcon.RenderTransform>
                                                                <CompositeTransform Rotation="90"/>
                                                            </FontIcon.RenderTransform>
                                                        </FontIcon>
                                                        <TextBlock x:Name="Title" Text="Title" Style="{StaticResource NowPlayingBiDiBodyTextBlockStyle}" TextWrapping="NoWrap" />
                                                    </StackPanel.Children>
                                                </StackPanel>
                                                <ContentControl x:Name="BadgeContainer"
                                                    Grid.Column="1"
                                                    Margin="8,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    
                                                    Foreground="{TemplateBinding Foreground}"
                                                    IsTabStop="False" />
                                                <Grid x:Name="CommandListGrid" Column="2">
                                                    
                                                        <ItemsControl x:Name="CommandList"
                                                            
                                                            Style="{StaticResource CommandButtonItemsControl}"
                                                            MinWidth="0"
                                                            MinHeight="0"
                                                            Margin="8,0,0,0"
                                                            VerticalAlignment="Stretch"
                                                            
                                                           
                                                            ItemTemplate="{StaticResource TrackCommandListTemplate}"
                                                            Visibility="Visible" />
                                                   
                                                </Grid>
                                            </Grid.Children>
                                        </Grid>
                                        <StackPanel x:Name="ArtistNamePanel" VerticalAlignment="Center">

                                            <TextBlock x:Name="ArtistName" Text="Artist"
                                                    
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    
                                                    Opacity="{ThemeResource NowPlayingSecondaryForegroundOpacity}"
                                                    TextWrapping="NoWrap" />
                                            
                                        </StackPanel>
                                        <StackPanel x:Name="AlbumNamePanel" VerticalAlignment="Center" >

                                            <TextBlock x:Name="AlbumName" Text="Album"
                                                    
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    
                                                    Opacity="{ThemeResource NowPlayingSecondaryForegroundOpacity}"
                                                    TextWrapping="NoWrap" />
                                           
                                        </StackPanel>
                                        <TextBlock x:Name="ReleaseYear"
                                            Style="{StaticResource NowPlayingBiDiBodyTextBlockStyle}"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            
                                            Opacity="{ThemeResource NowPlayingSecondaryForegroundOpacity}"
                                            TextWrapping="NoWrap" />
                                        <TextBlock x:Name="Genre"
                                            Style="{StaticResource NowPlayingBiDiBodyTextBlockStyle}"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            
                                            Opacity="{ThemeResource NowPlayingSecondaryForegroundOpacity}"
                                            TextWrapping="NoWrap" />
                                        <Grid x:Name="ContextMenuTeachingMoment" VerticalAlignment="Center"  Padding="0,0,24,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.Children>
                                                <FontIcon x:Name="TrackContextTeachingMomentIcon" Margin="20,0,12,0"  Visibility="Visible" />
                                                <TextBlock x:Name="TrackContextTeachingMomentText"
                                                    Style="{StaticResource NowPlayingBiDiBodyTextBlockStyle}"
                                                    Grid.Column="1"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource PrimaryForegroundBrush}"
                                                    Visibility="Visible">
                                                    <TextBlock.Text>
                                                        <CustomResource ResourceKey="IDS_TEACHING_MOMENT_SHOW_CONTEXT_MENU" />
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Grid.Children>
                                        </Grid>
                                        <Grid VerticalAlignment="Center"  Padding="0,0,19,0">
                                            <Grid.Children>
                                                <TextBlock x:Name="Duration"
                                                    Style="{StaticResource NowPlayingBiDiBodyTextBlockStyle}"
                                                    Margin="12,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Opacity="{ThemeResource NowPlayingSecondaryForegroundOpacity}"
                                                    TextWrapping="NoWrap" />
                                                <ContentControl x:Name="DownloadProgress"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Stretch"
                                                    
                                                    IsTabStop="False" />
                                                <ContentControl x:Name="ItemOwnership"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    
                                                    Foreground="{TemplateBinding Foreground}"
                                                    IsTabStop="False"
                                                    Visibility="Visible" />
                                            </Grid.Children>
                                        </Grid>
                                        <ContentControl x:Name="LargeScreenItemOwnershipColumn"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            
                                            Foreground="{TemplateBinding Foreground}"
                                            IsTabStop="False"
                                            Padding="0,0,24,0" />
                                    </StackPanel.Children>
                                </StackPanel>
                            </Grid.Children>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0 80 0 0">

        <Grid>
            <Image Source="https://vk.com/sticker/1-13281-256b"
               Width="180" Height="180" Visibility="Collapsed"/>


            <lottieUwp:LottieDrawable x:Name="LottieAnimationView" Width="180" Height="180"/>

            <ContentControl Style="{StaticResource NowPlayingTrackListItemStyle}" VerticalAlignment="Center" Background="Green" Foreground="Red">
                
            </ContentControl>
        </Grid>
        
        

        

        <StackPanel VerticalAlignment="Bottom" Visibility="Collapsed">
            <TextBlock Text="LottieAnimationView Scale"/>
            <Slider Minimum="0.03" Maximum="1.0" StepFrequency="0.01" Value="{Binding Scale, Mode=TwoWay, ElementName=LottieAnimationView}"/>

            <Button Content="Start" Click="Button_Click"/>
            <Button Content="Pause" Click="Button_Click_1"/>


            <TextBlock Text="{Binding Scale, ElementName=LottieAnimationView, Mode=OneWay}"/>
            <TextBlock Text="{Binding ScaleX, ElementName=scale, Mode=OneWay}"/>

            <Slider Minimum="0" Maximum="10.0" Value="0.0" StepFrequency="0.1" ValueChanged="Slider_ValueChanged2" Name="sl3"/>
            <TextBlock Text="{Binding Value, ElementName=sl3, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Page>
