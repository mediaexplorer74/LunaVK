<Page
    x:Class="LunaVK.Pages.Debug.TestBotKeyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="using:LunaVK.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="1" Click="Button_Click"/>
            <Button Content="2" Click="Button_Click_1"/>
            <Button Content="3" Click="Button_Click_2"/>
            <Button Content="4" Click="Button_Click_3"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom">
            <TextBlock Name="_out" TextWrapping="Wrap" />
            <uc:BotKeyboardUC  x:Name="_botKeyboard" Background="Red"/>
        </StackPanel>
    </Grid>
</Page>
