<UserControl
    x:Class="LunaVK.Photo.UC.SelectFontUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LunaVK.Photo.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <GridView SizeChanged="GridView_SizeChanged" SelectionMode="Single" SelectionChanged="GridView_SelectionChanged">
            <GridViewItem>
                <TextBlock Text="Arial" FontFamily="Arial"/>
            </GridViewItem>
            <GridViewItem>
                <TextBlock Text="Calibri" FontFamily="Calibri"/>
            </GridViewItem>

            <GridViewItem>
                <TextBlock Text="Century Gothic" FontFamily="Century Gothic"/>
            </GridViewItem>

            <GridViewItem>
                <TextBlock Text="Courier New" FontFamily="Courier New"/>
            </GridViewItem>

            <GridViewItem>
                <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
            </GridViewItem>
        </GridView>
    </Grid>
</UserControl>
